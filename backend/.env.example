# Django settings
DEBUG=True
SECRET_KEY=your-secret-key-here
DATABASE_URL=postgis://coalition_app:your-app-db-password@localhost:5432/coalition

# IMPORTANT: Always include localhost,127.0.0.1 for health checks in both local and production
ALLOWED_HOSTS=localhost,127.0.0.1,api,nginx,ssr

# CORS settings (for local development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF settings (for production)
CSRF_TRUSTED_ORIGINS=https://yourdomain.org,https://www.yourdomain.org

# Cache settings
CACHE_URL=redis://localhost:6379/1

# AWS settings (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net

# Email settings (optional)
# For development: use console backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production with SES: use SafeSMTPBackend
# EMAIL_BACKEND=coalition.core.email_backend.SafeSMTPBackend
# EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-ses-smtp-username
# EMAIL_HOST_PASSWORD=your-ses-smtp-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.org
SERVER_EMAIL=server@yourdomain.org

# Site password protection (optional)
SITE_PASSWORD_ENABLED=false
SITE_USERNAME=admin
SITE_PASSWORD=changeme

# Organization settings
ORGANIZATION_NAME=Coalition Builder
ORG_TAGLINE="Building strong advocacy partnerships"
CONTACT_EMAIL=info@example.org
ADMIN_NOTIFICATION_EMAILS=admin1@example.org,admin2@example.org

# Security settings (for production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Application settings
API_PORT=8000
HEALTH_CHECK_PATH=/health/

# Database connection pool settings (optional)
CONN_MAX_AGE=60

# Logging level
LOG_LEVEL=INFO