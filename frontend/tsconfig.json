{
  "compilerOptions": {
    // Basic compilation settings
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": true,

    // Module resolution
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@contexts/*": ["./contexts/*"],
      "@hooks/*": ["./hooks/*"],
      "@services/*": ["./services/*"],
      "@styles/*": ["./styles/*"],
      "@tests/*": ["./tests/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "react", "react-dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // JSX and React
    "jsx": "preserve",
    "isolatedModules": true,

    // Output and build
    "noEmit": true,
    "incremental": true,

    // Plugins
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts"
  ]
}