{
  "compilerOptions": {
    // Basic compilation settings
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": true,

    // Module resolution
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@frontend/*": ["../frontend/src/*"],
      "@frontend/types": ["../frontend/src/types/index.ts"],
      "@frontend/components/*": ["../frontend/src/components/*"],
      "@frontend/contexts/*": ["../frontend/src/contexts/*"],
      "@shared/*": ["../shared/*"],
      "@components/*": ["../frontend/src/components/*"],
      "@contexts/*": ["../frontend/src/contexts/*"],
      "@hooks/*": ["../frontend/src/hooks/*"],
      "@pages/*": ["../frontend/src/pages/*"],
      "@services/*": ["../frontend/src/services/*"],
      "@styles/*": ["../frontend/src/styles/*"],
      "@tests/*": ["../frontend/src/tests/*"],
      "@app-types/*": ["../frontend/src/types/*"],
      "@app-types/index": ["../frontend/src/types/index.ts"],
      "@utils/*": ["../frontend/src/utils/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "react", "react-dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // JSX and React
    "jsx": "preserve",
    "isolatedModules": true,

    // Output and build
    "noEmit": true,
    "incremental": true,

    // Plugins
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "../frontend/src/types/**/*.ts",
    "../frontend/src/components/**/*.tsx",
    "../frontend/src/services/**/*.ts",
    "../shared/**/*.ts",
    "../shared/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "../frontend/src/**/__tests__/**/*",
    "../frontend/src/tests/**/*",
    "../frontend/src/setupTests.ts",
    "../frontend/src/App.tsx",
    "../frontend/src/App.test.tsx",
    "../frontend/src/index.tsx",
    "../frontend/src/reportWebVitals.ts",
    "../frontend/src/components/HomePage.tsx",
    "../frontend/src/components/StyledHomePage.tsx",
    "../frontend/src/components/ThemeStyles.tsx",
    "../frontend/src/components/styled/**/*",
    "../frontend/src/components/LinkWrapper.tsx",
    "../frontend/src/pages/Privacy.tsx",
    "../frontend/src/pages/Terms.tsx",
    "../frontend/src/pages/Home.tsx",
    "../frontend/src/pages/CampaignDetail.tsx",
    "../frontend/src/contexts/StyledThemeProvider.tsx",
    "../frontend/src/hooks/useStyledTheme.ts",
    "../frontend/src/styles/styled.d.ts"
  ]
}
